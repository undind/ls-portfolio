script(type="text/x-template")#skills-list
  .services__skills(ref="skills")
    .skills__row(v-for="skillGroup in skillGroups" :key="skillGroup.title")
      skills-row(
        :title="skillGroup.title"
        :skills="skillGroup.skills"
        :is-in-viewport="isInViewport"
      )

script(type="text/x-template")#skills-row
  .skills__group
    .skills__group-title {{title}}
    .skills__group-items
      .skills__group-item(v-for="skill in skills")
        skill(
          :title="skill.title"
          :percent="skill.percent"
          :is-in-viewport="isInViewport"
        )

script(type="text/x-template")#skill
  .skill
    svg.skill__chart(viewBox="0 0 100 100" preserveAspectRatio="none")
      circle(cx="50" cy="50" r="40" class="skill__circle" fill="none" stroke="#e9e9e9" stroke-width="7")
      circle(cx="50" cy="50" r="40" ref="color-circle" class="skill__circle" fill="none" stroke="url(#gradient)" stroke-width="15" :stroke-dasharray="circumference" :stroke-dashoffset="lineLength")
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
        stop(offset="0%" stop-color="#9300e8")
        stop(offset="100%" stop-color="#4a00ed")
    .skill__name {{title}}