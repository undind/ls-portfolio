.footer-section {
  background-color: #252830;
  color: #fff;
  padding: 100px 0;
}

.footer {
  display: flex;
}

.footer__menu-content {
  display: flex;
  justify-content: space-between;
}

.footer__menu-text, 
.footer__menu-quote-text {
  opacity: 0.3;
  margin-bottom: 20px;
  line-height: $l-height;
}

.footer__menu-quote {
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.footer__menu-quote-author {
  font-style: italic;
}