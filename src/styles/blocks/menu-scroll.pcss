.scroll {
  display: grid;
  align-items: center;
  justify-items: center;
  padding-bottom: 20px;
  grid-area: scroll;

  @include tablets {
    display: none;
  }
}

.scroll__link {
  display: flex;
  font-size: 18px;
  transition: all 0.3s;
  scroll-behavior: smooth;

  &:hover {
    color: $links-color;

    & .scroll__icon {
      fill: $links-color;
    }
  }
}

.scroll__desc {
  margin-right: 22px;
}

.scroll__icon {
  width: 25px;
  height: 30px;
  cursor: pointer;
  transition: all 0.3s;
}