.author__content {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: max-content max-content;
  text-align: center;
  grid-area: content;
  justify-self: center;
  align-self: center;

  @include desktop {
    grid-template-columns: 1fr 1fr;
  }
}

.content__text {
  opacity: 0.4;
  width: 35%;
  justify-self: center;
  /* margin: 0 auto 33px auto; */

  @include desktop {
    justify-self: right;
    text-align: right;
    margin-right: 20px;
  }
}

.content__name {
  font-size: 72px;
  font-weight: 800;
  line-height: 60px;
  justify-self: center;
  width: 90%;
  margin-top: 20px;
  /* width: 30%;
  margin: 0 auto; */

  @include desktop {
    margin-top: 0;
    justify-self: left;
    width: 100%;
    text-align: justify;
  }
}