include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        
        section.parallax
          .parallax__layer(data-speed="0.1")
            +image(`parallax-header/1.png`, 'parallax__image')
          .parallax__layer(data-speed="0.25")
            +image(`parallax-header/2.png`, 'parallax__image')
          .parallax__layer(data-speed="0.25")
            +image(`parallax-header/3.png`, 'parallax__image')
          .parallax__layer(data-speed="0.23")
            +image(`parallax-header/4.png`, 'parallax__image')
          .parallax__layer(data-speed="0.25")
            +image(`parallax-header/5.png`, 'parallax__image')
          .parallax__layer(data-speed="0.28")
            +image(`parallax-header/6.png`, 'parallax__image')
          .parallax__layer(data-speed="0")
            +image(`parallax-header/7.png`, 'parallax__image')

          include components/menu-section
            
          include components/greeting-section
          
        include components/triangles

        include components/service-section

        include components/works-section

        .budda-wrapper
        
          include components/reviews-section
          include components/feedback-section

        include components/footer-section
