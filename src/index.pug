                    circle(cx="50" cy="50" r="40" class="circle circle__under")
                    circle(cx="50" cy="50" r="40" class="circle circle__above" stroke="url(#gradient)" style="animation-delay: -15s")
                    text(x="-50%" y="-50%" dominant-baseline="middle" text-anchor="middle" class="circle__text") CSS3
                li.services__item
                  svg(class="percentage" viewBox="0 0 100 100" preserveAspectRatio="none")
