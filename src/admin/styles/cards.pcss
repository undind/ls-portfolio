.card {
  box-shadow: 4px 3px 20px rgba(0, 0, 0, 0.07);
  background-color: #ffffff;
  width: 100%;
  min-height: 387px;
  padding: 20px;
  display: grid;
  grid-template-rows: max-content 1fr max-content;
}

.card__header {
  padding: 0 8px 14px 8px;
  border-bottom: 1px solid rgba(#1f232d, 0.15);
}